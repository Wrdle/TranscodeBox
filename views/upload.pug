extends layout

block content
    .jumbotron
        .text-center
            h2.display-4 Transcode Video
    .container.text-center
        .container.text-left.form-container
            form(onsubmit='return false;')
                .form-group
                    label(for='title') Video title
                    input#title.form-control(type='text', placeholder='Enter video title...')
                .form-group
                    label(for='file') Select a video file
                    input#file.form-control-file(type='file')
                .form-group
                    label(for='resolution') Select output resolution
                    select#resolution.form-control
                        option 720p
                        option 576p
                        option 480p
                .text-center
                    #error.alert.alert-danger(role='alert')
                    a.btn.btn-success.upload-confirm(href='/', role='button', onclick='submitUploadForm()') Upload &amp; Transcode
                #progressBar.progress
                    #progress.progress-bar.progress-bar-striped.progress-bar-animated(role='progressbar', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100', style='width: 0%')
    script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
    script(src='/javascripts/upload.js')
